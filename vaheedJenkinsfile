pipeline {
   agent any
   
   options {
        timestamps()
        timeout(time: 1, unit: 'HOURS')
   }
   
   tools {
         maven 'Maven-363'
   }
   
   stages {
          stage('PIPELINE-START') {
               steps {
                       echo 'PIPELINE STARTED'
                       //sh label: '', script: 'echo PIPELINE STARTED'
             }
          }
        
        // stage('GIT-Checkout') {
            // git 'https://github.com/vaheedgithubac/Dummy-myweb'
      //  }
      
         //dir('') {
                    //deleteDir()
           // }
            
            
         stage('Maven Build') {
            steps {
                    //cleanWS()
                    sh 'mvn clean install package'
            }
         } // Maven-Build
         
         
         stage('Build Docker Image') {
            steps {
                  
                  sh 'docker build -t vaheeddockerhub/my-app:1.0.0 .'
            }
         }
         
         
         stage('Push Docker Image to Docker Hub') {
            steps {
              withCredentials([usernamePassword(credentialsId: 'DockerHub-Creds', 
                                                passwordVariable: 'DOCKERHUBPWD', 
                                                usernameVariable: 'DOCKERHUBUNAME')]) {
    
                    sh "docker login -u ${DOCKERHUBUNAME} -p ${DOCKERHUBPWD}"
    
                    }
                     sh 'docker push vaheeddockerhub/my-app:1.0.0'
                }
           } // stage
           
           
           stage('Run container on DEV-Server') {
               steps{
                  
                  sshagent(['Tomcat-Server-Creds']) {
                  
                       sh """
                             scp -o StrictHostKeyChecking=no /opt/docker-script.sh ec2-user@172.31.36.253:/opt
                             ssh ec2-user@172.31.36.253 /opt/docker-script.sh
                             
                       """
                      }
                }
             }
          
         
   }
   
   //post {
    //always {

    //}
    //success{

    //}
    //failure {

   // }
    //cleanup{
        //deleteDir()
    //}
  //}
}
